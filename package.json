{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna exec --parallel --no-private -- babel --root-mode upward src -d lib --ignore **/*.story.js,**/*.spec.js",
    "gulp": "lerna run --no-private gulp",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "dev": "start-storybook -p 5555",
    "coverage": "jest --coveragel",
    "unit": "jest --watch",
    "start-app": "cd packages/app && react-scripts start",
    "test-app": "cd packages/app && react-scripts test --watch"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@react-workspaces/react-scripts": "3.0.0-alpha-04",
    "@storybook/react": "^5.1.9",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-inline-react-svg": "^1.1.0",
    "babel-plugin-styled-components": "^1.10.6",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-connect": "^5.7.0",
    "jest": "^23.6.0",
    "jest-haste-map": "^24.8.1",
    "jest-resolve": "^24.8.0",
    "jest-styled-components": "^6.3.3",
    "jest-transform-stub": "^2.0.0",
    "lerna": "^3.15.0",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.8.6",
    "react-test-renderer": "^16.8.6",
    "styled-components": "^4.3.2",
    "cross-env": "5.0.5",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "webpack": "^4.35.2"
  },
  "dependencies": {
    "@ursip/design-system": "^1.1.0",
    "prop-types": "^15.7.2",
    "react-redux": "^7.1.0",
    "redux": "^4.0.1",
    "redux-dynamic-modules": "5.0.0-alpha.0",
    "redux-dynamic-modules-core": "5.0.0-alpha.0",
    "redux-dynamic-modules-react": "5.0.0-alpha.0",
    "redux-dynamic-modules-saga": "5.0.0-alpha.0",
    "redux-dynamic-modules-thunk": "5.0.0-alpha.0",
    "redux-logger": "3.0.6",
    "redux-saga": "1.0.3",
    "redux-saga-requests": "0.25.0",
    "redux-thunk": "2.3.0",
    "reselect": "4.0.0"
  }
}
